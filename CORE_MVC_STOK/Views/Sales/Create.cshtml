@model CORE_MVC_STOK.Models.Sales

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#salesModal').modal('show');
    });
</script>

<div class="modal" id="salesModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Yapma Ekranı</h2>
            </div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CustomerId" class="control-label"></label>
                        @Html.DropDownListFor(m => m.Customer.CustomerId, (List<SelectListItem>)ViewBag.customerList, new { @class = "form-control" })
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductId" class="control-label"></label>
                        @Html.DropDownListFor(m => m.Product.ProductId, (List<SelectListItem>)ViewBag.productList, new { @class = "form-control" })
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Piece" class="control-label"></label>
                        <input asp-for="Piece" class="form-control" required />
                        <span asp-validation-for="Piece" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Satış Yap" class="btn btn-info" />
                        <a asp-action="Index" class="btn btn-danger">Vazgeç</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>