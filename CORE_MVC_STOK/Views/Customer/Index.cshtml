@model IEnumerable<CORE_MVC_STOK.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="form-group" style="margin-top:15px">
    <label class=" form-control" style="color:red">@TempData["Warning"]</label>
</div>

<table class="table table-bordered" id="indexTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerSurname)
            </th>
            <th>
                SİL
            </th>
            <th>
                GÜNCELLE
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerSurname)
                </td>
                <td>
                    @Html.ActionLink("Sil", "Delete", new { id = item.CustomerId }, new { @class = "btn btn-danger", onclick = "return confirmed=('Gerçekten Silmek İstiyor musunuz ?')" })
                </td>
                <td>
                    <a href="/Customer/Update/@item.CustomerId" class="btn btn-success">Güncelle</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Yeni Müşteri Ekle</a>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script>
    $('#indexTable').DataTable();
</script>

